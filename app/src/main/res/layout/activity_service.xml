<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="phansa.phaiboon.showtun.ServiceActivity">

    <!--Content-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--ToolBar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBarService"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


        <!--Fragment Content-->
        <FrameLayout
            android:id="@+id/contentFragmentService"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <!--Drawer Menu-->
    <LinearLayout
        android:layout_gravity="start"
        android:background="#64000000"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="match_parent">

        <!--Read Ebook-->
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Icon-->
            <ImageView
                android:src="@drawable/ic_ebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Title-->
            <TextView
                android:textColor="@color/colorPrimaryLight"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Read Ebook"
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <!--Show Location-->
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Icon-->
            <ImageView
                android:src="@drawable/ic_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Title-->
            <TextView
                android:textColor="@color/colorPrimaryLight"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Find Location"
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Web View Youtube-->
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Icon-->
            <ImageView
                android:src="@drawable/ic_youtube"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Title-->
            <TextView
                android:textColor="@color/colorPrimaryLight"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Watch Youtube"
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--Search-->
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Icon-->
            <ImageView
                android:src="@drawable/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Title-->
            <TextView
                android:textColor="@color/colorPrimaryLight"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="Search Service"
                android:textStyle="bold"
                android:textSize="@dimen/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
